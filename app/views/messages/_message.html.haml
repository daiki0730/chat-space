.chatMain__body--list--message{data: {messageid: {id: "#{message.id}"}}}
  .chatMain__body--list--message--name
    = message.user.name
  .chatMain__body--list--message--time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chatMain__body--list--message--text
    - if message.content.present?
      %p
        = message.content
    = image_tag message.image.url  if message.image.present?
